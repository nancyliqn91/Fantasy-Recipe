@{
  Layout = "_Layout";
}

@using FantacyRecipe.Models;

<h1>Tags</h1>

@if (@Model.Count == 0)
{
  <h3>No tags have been added yet!</h3>
} 

<ul>
  @foreach(Tag tag in Model)
  {
    <li>@Html.ActionLink($"{tag.TagName}", "Details", new { id = tag.TagId })</li>
  }
</ul>

<p>@Html.ActionLink("Create new recipe", "Create", "Recipes")</p>
<p>@Html.ActionLink("Add new Tag", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>

@if (User.Identity.IsAuthenticated)
{
  <p>Hello @User.Identity.Name!</p>
  
  <p>@Html.ActionLink("View my tags", "MyTags")</p>
}