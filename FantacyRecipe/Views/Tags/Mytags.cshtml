@{
  Layout = "_Layout";
}

@using FantacyRecipe.Models;

<h1>@User.Identity.Name's Tags</h1>

@if (@Model.Count == 0)
{
  <h3>No tags have been added yet!</h3>
} 

<ul>
  @foreach(Tag tag in Model)
  {
    <li>@Html.ActionLink($"{tag.TagName}", "Details", new { id = tag.TagId })</li>
  }
</ul>

<p>@Html.ActionLink("Add new recipe", "Create", "Recipes")</p>
<p>@Html.ActionLink("Create a Tag", "Create")</p>
<p>@Html.ActionLink("Tags Index", "Index")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>