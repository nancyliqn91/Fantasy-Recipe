@{
  Layout = "_Layout";
}

@using FantacyRecipe.Models;

<h1>@User.Identity.Name's Recipes</h1>

@if (@Model.Count == 0)
{
  <h3>No recipes have been added yet!</h3>
} 

<ul>
  @foreach(Recipe recipe in Model)
  {
    <li>@Html.ActionLink($"{recipe.RecipeName}", "Details", new { id = recipe.RecipeId })</li>
  }
</ul>

<p>@Html.ActionLink("Add new recipe", "Create")</p>
<p>@Html.ActionLink("Create a Tag", "Create", "Tags")</p>
<p>@Html.ActionLink("Recipes Index", "Index", "Recipes")</p>
